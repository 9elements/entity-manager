/dts-v1/;
/plugin/;
/ {
    compatible = "$platform";
    fragment@0{
        target = <&i2c$bus>;
        __overlay__{
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";
            $Name: pmbus@$address {
                compatible = "pmbus";
                reg = <0x$address>;
                oemname1 = "$Name";
            };
        };
    };
};
